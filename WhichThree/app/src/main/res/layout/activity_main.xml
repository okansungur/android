<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rel1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <RelativeLayout
        android:id="@+id/relColor"
        android:layout_width="match_parent"

        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/button0"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_above="@+id/button4"
            android:layout_toLeftOf="@+id/button1"
            android:onClick="clickButton"
            android:text="@string/button_0"
            app:srcCompat="@drawable/a" />

        <ImageView
            android:id="@+id/button1"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:onClick="clickButton"
            android:text="@string/button_1"
            app:srcCompat="@drawable/b" />

        <ImageView
            android:id="@+id/button2"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_above="@+id/button4"
            android:layout_toRightOf="@+id/button1"
            android:onClick="clickButton"
            android:text="@string/button_2"
            app:srcCompat="@drawable/c" />

        <ImageView
            android:id="@+id/button3"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_alignLeft="@+id/button0"
            android:layout_alignStart="@+id/button0"
            android:layout_below="@+id/button0"
            android:onClick="clickButton"
            android:text="@string/button_3"
            app:srcCompat="@drawable/d" />

        <ImageView
            android:id="@+id/button4"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_below="@+id/button1"
            android:layout_centerHorizontal="true"
            android:onClick="clickButton"
            android:text="@string/button_4"
            app:srcCompat="@drawable/e" />

        <ImageView
            android:id="@+id/button5"
            android:layout_width="90dp"
            android:layout_height="90dp"

            android:layout_below="@+id/button2"

            android:layout_toRightOf="@+id/button4"
            android:onClick="clickButton"
            android:text="@string/button_5"
            app:srcCompat="@drawable/f" />

        <ImageView
            android:id="@+id/button6"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_below="@+id/button4"
            android:layout_toLeftOf="@+id/button4"
            android:onClick="clickButton"
            android:text="@string/button_6"
            app:srcCompat="@drawable/g" />

        <ImageView
            android:id="@+id/button7"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_below="@+id/button4"
            android:layout_toRightOf="@+id/button6"
            android:onClick="clickButton"
            android:text="@string/button_8"
            app:srcCompat="@drawable/h" />


        <ImageView
            android:id="@+id/button8"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_below="@+id/button5"
            android:layout_toRightOf="@+id/button7"
            android:onClick="clickButton"
            app:srcCompat="@drawable/i" />




    </RelativeLayout>




    <LinearLayout
        android:id="@+id/lin6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/lin5"

        android:layout_centerHorizontal="true"
        android:layout_centerInParent="false"
        android:orientation="horizontal">
        <Button
            android:id="@+id/mbutton0"
            android:textSize="18sp"
            android:textStyle="bold"
            android:background="@drawable/button_shape1"
            android:textColor="#ffffff"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_above="@+id/button4"
            android:layout_toLeftOf="@+id/button1"
            android:onClick="clickButton"
            android:tag="0"
            />

        <Button
            android:id="@+id/mbutton1"
            android:textSize="18sp"
            android:textStyle="bold"
            android:background="@drawable/button_shape1"
            android:textColor="#ffffff"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:onClick="clickButton"
            android:tag="1"
            />

        <Button
            android:id="@+id/mbutton2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_above="@+id/button4"
            android:layout_toRightOf="@+id/button1"
            android:background="@drawable/button_shape1"
            android:onClick="clickButton"
            android:tag="2"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lin5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/lin4"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">

        <Button
            android:id="@+id/mbutton3"
            android:layout_width="60dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:background="@drawable/button_shape1"
            android:textColor="#ffffff"
            android:layout_height="60dp"
            android:layout_above="@+id/button4"
            android:layout_toLeftOf="@+id/button1"
            android:onClick="clickButton"
            android:tag="3" />

        <Button
            android:id="@+id/mbutton4"
            android:background="@drawable/button_shape1"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:onClick="clickButton"
            android:tag="4" />

        <Button
            android:id="@+id/mbutton5"
            android:background="@drawable/button_shape1"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_above="@+id/button4"
            android:layout_toRightOf="@+id/button1"
            android:onClick="clickButton"
            android:tag="5" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lin4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/lin3"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">

        <Button
            android:id="@+id/mbutton6"
            android:background="@drawable/button_shape1"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_above="@+id/button4"

            android:onClick="clickButton"
            android:tag="6" />

        <Button
            android:id="@+id/mbutton7"
            android:background="@drawable/button_shape1"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:onClick="clickButton"
            android:tag="7" />

        <Button
            android:id="@+id/mbutton8"
            android:background="@drawable/button_shape1"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_above="@+id/button4"
            android:layout_toRightOf="@+id/button1"
            android:onClick="clickButton"
            android:tag="8" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lin3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/lin2"

        android:orientation="horizontal">

        <TextView
            android:id="@+id/playerMsg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColor="#ff0000"
            android:textSize="14sp"
            android:textStyle="bold" />


    </LinearLayout>
    <LinearLayout
        android:id="@+id/lin2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/lin1"
        android:orientation="horizontal">


    </LinearLayout>

    <LinearLayout
        android:id="@+id/lin1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"

        android:orientation="horizontal">

        <Button
            android:id="@+id/button_help"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textStyle="bold"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/button_shufle"
            android:textColor="#ffffff"
            android:text="help" />




    </LinearLayout>



</RelativeLayout>
