<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rel1"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <Button
        android:id="@+id/button0"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_above="@+id/button4"
        android:layout_toLeftOf="@+id/button1"
        android:onClick="tusaBas"
        android:tag="0"
        android:text="@string/button_0" />

    <Button
        android:id="@+id/button1"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:onClick="tusaBas"
        android:tag="1"
        android:text="@string/button_1" />

    <Button
        android:id="@+id/button2"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_above="@+id/button4"
        android:layout_toRightOf="@+id/button1"
        android:onClick="tusaBas"
        android:tag="2"
        android:text="@string/button_2" />

    <Button
        android:id="@+id/button3"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignBottom="@+id/button4"
        android:layout_toLeftOf="@+id/button4"
        android:onClick="tusaBas"
        android:tag="3"
        android:text="@string/button_3" />

    <Button
        android:id="@+id/button4"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@+id/button1"
        android:layout_centerHorizontal="true"
        android:onClick="tusaBas"
        android:tag="4"
        android:text="@string/button_4" />

    <Button
        android:id="@+id/button5"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignBottom="@+id/button4"
        android:layout_toRightOf="@+id/button4"
        android:onClick="tusaBas"
        android:tag="5"
        android:text="@string/button_5" />

    <Button
        android:id="@+id/button6"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@+id/button4"
        android:layout_toLeftOf="@+id/button4"
        android:onClick="tusaBas"
        android:tag="6"
        android:text="@string/button_6" />

    <Button
        android:id="@+id/button7"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@+id/button4"
        android:layout_toRightOf="@+id/button6"
        android:onClick="tusaBas"
        android:tag="7"
        android:text="@string/button_8" />


    <Button
        android:id="@+id/button8"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@+id/button5"
        android:layout_toRightOf="@+id/button7"

        android:onClick="tusaBas"
        android:tag="8" />


    <!-- INTEFACE CONTROLS:

    	The button to start a new game and the text box that
    	shows messages and information to the user are designed here. -->

    <Button
        android:id="@+id/button_newGame"
        android:layout_width="160dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"

        android:text="New Game" />

    <TextView
        android:id="@+id/textView_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button_newGame"
        android:layout_centerHorizontal="true"
        android:paddingBottom="10dp"
        android:text="Status"
        android:textAppearance="?android:attr/textAppearanceMedium" />


</RelativeLayout>
