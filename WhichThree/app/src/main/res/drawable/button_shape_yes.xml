<?xml version="1.0" encoding="utf-8" ?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item  >
        <shape>
            <solid
                android:color="#a4fa05" />
            <stroke
                android:width="1dp"
                android:color="#66960c" />
            <corners
                android:radius="6dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#66960c"
                android:endColor="#66960c"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#66960c" />
            <corners
                android:radius="6dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>