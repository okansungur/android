<?xml version="1.0" encoding="utf-8" ?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item  >
        <shape>
            <solid
                android:color="#fa8305" />
            <stroke
                android:width="1dp"
                android:color="#e47c05" />
            <corners
                android:radius="6dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#fa8305"
                android:endColor="#e47c05"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#e47c05" />
            <corners
                android:radius="6dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>